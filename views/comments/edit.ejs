<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 class="text-center">Edit Comment</h1>
        <div style="width: 30%; margin: 1.5em auto;">
            <!-- campground_id is different then campground_.id -->
                <!-- campground._id = all campgrounds information (not necessary here since we're working with just the url -->
                <!-- campground_id = just the id of this particular campground that we'll pass through in our template -->
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">    
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form> 
            <a href="/campgrounds">Go Back</a>    
        </div>
    </div>
</div>

<% include ../partials/footer %>